{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block stylesheets %}<link rel="stylesheet" type="text/css" href="{{ asset('css/resetpass.css') }}" />{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Reinitialisez votre mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Veuilliez saisir votre adresse mail. Un email avec un lien vous permettant de réinitialiser votre mot de passe y sera envoyé.
            </small>
        </div>

        <button class="submit-button">Envoyer</button>
    {{ form_end(requestForm) }}
{% endblock %}
