{% extends 'base.html.twig' %}

{% block title %}Modification du mot de passe de {{ app.user.firstname }} {{ app.user.lastname }}{% endblock %}


{% block stylesheets %}<link rel="stylesheet" type="text/css" href="{{ asset('css/editpass.css') }}" />{% endblock %}
{% block body %}
    <div class="grix xs4 container">
        {% for message in app.flashes('error') %}
            <div class="error-message">
                <div class="error-message-content">{{message}}</div>
            </div>
        {% endfor %}
        <div class="col-xs4">
            <h1>Modification du mot de passe de {{ app.user.firstname }} {{ app.user.lastname }}</h1>
            <form class="form-oublie-mdp" method="post">
                <div class="form-field">
                    <label class="label-pass" for="pass">Mot de passe</label>
                    <input class="form-control" type="password" id="pass" name="pass" >
                </div>
                <div class="form-field">
                    <label class="label-pass" for="pass2">Confirmer le mot de passe</label>
                    <input class="form-control" type="password" id="pass2" name="pass2" >
                </div>
                <button class="submit-edit-pass" type="submit">Valider</button>

            </form>
        </div>

    </div>
{% endblock %}
