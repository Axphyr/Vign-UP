{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/update.css') }}" />
{% endblock %}

{% block title %}Modification d'une ressource{% endblock %}

{% block body %}
    <div class="form__update">
        <p>Modification de la ressource <strong>{{ ressource.nomRessource }}</strong>.</p>

        <form name="ressource" method="post">
            {{ form_widget(form) }}
            <button id="form_update" type="submit" class="btn btn-primary">Valider la modification</button>
        </form>
    </div>
{% endblock %}
